<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".rank.route.detail.RouteDetailFragment">

    <data>

        <variable
            name="viewModel"
            type="com.yuyu.barhopping.rank.route.detail.RouteDetailViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/detail_map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/user_icon_card"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/user_icon_card"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="90dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/detail_map">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                app:imageUrl="@{viewModel.routeStore.userIcon}" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/user_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{viewModel.routeStore.userName}"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/user_icon_card"
            app:layout_constraintTop_toTopOf="@id/user_icon_card" />

        <TextView
            android:id="@+id/time_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:gravity="right"
            android:text="@{viewModel.routeStore.time}"
            app:layout_constraintBottom_toBottomOf="@id/user_icon_card"
            app:layout_constraintStart_toStartOf="@id/user_name_tv" />

        <ImageView
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@id/user_icon_card" />

        <ImageView
            android:id="@+id/location_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_baseline_my_location_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line1" />

        <TextView
            android:id="@+id/location_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:text="@{viewModel.routeStore.startPoint}"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/location_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/location_img"
            app:layout_constraintTop_toTopOf="@+id/location_img" />

        <ImageView
            android:id="@+id/more_vert_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:layout_constraintEnd_toEndOf="@id/location_img"
            app:layout_constraintStart_toStartOf="@id/location_img"
            app:layout_constraintTop_toBottomOf="@id/location_img" />

        <ImageView
            android:id="@+id/destination_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_location_on_24"
            app:layout_constraintEnd_toEndOf="@id/location_img"
            app:layout_constraintStart_toStartOf="@id/location_img"
            app:layout_constraintTop_toBottomOf="@+id/more_vert_img" />

        <TextView
            android:id="@+id/destination_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="marquee"
            android:gravity="center_vertical"
            android:text="@{viewModel.routeStore.endPoint}"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/destination_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/destination_img" />

        <ImageView
            android:id="@+id/line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@color/light_gray"
            app:layout_constraintTop_toBottomOf="@id/destination_img" />

        <TextView
            android:id="@+id/market_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="@string/count"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2"
            tools:layout_editor_absoluteX="16dp" />

        <TextView
            android:id="@+id/number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/market_number_tv"
            app:layout_constraintStart_toEndOf="@id/market_number_tv"
            app:layout_constraintTop_toTopOf="@id/market_number_tv"
            app:store="@{viewModel.routeStore.marketCount}" />

        <TextView
            android:id="@+id/route_length_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/length"
            app:layout_constraintStart_toStartOf="@+id/market_number_tv"
            app:layout_constraintTop_toBottomOf="@+id/market_number_tv" />

        <TextView
            android:id="@+id/length_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/route_length_tv"
            app:layout_constraintStart_toEndOf="@id/route_length_tv"
            app:layout_constraintTop_toTopOf="@id/route_length_tv"
            app:length="@{viewModel.routeStore.length}" />

        <Button
            android:id="@+id/go_navigate"
            style="@style/step_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/go_navigate"
            app:layout_constraintBottom_toBottomOf="@+id/route_length_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/market_number_tv" />

        <TextView
            android:id="@+id/hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp"
            android:text="@string/detail_hint"
            android:textColor="@color/gray"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/route_length_tv"
            app:layout_constraintTop_toBottomOf="@id/length_tv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>