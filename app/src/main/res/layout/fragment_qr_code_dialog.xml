<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".map.qrcode.QrCodeDialogFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/qr_code_img"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:background="@color/white"
            android:foregroundGravity="center"
            app:layout_constraintBottom_toTopOf="@id/check_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/qr_dialog_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/qr_dialog"
            app:layout_constraintEnd_toEndOf="@id/qr_code_img"
            app:layout_constraintStart_toStartOf="@id/qr_code_img"
            app:layout_constraintTop_toBottomOf="@id/qr_code_img" />

        <Button
            android:id="@+id/check_btn"
            style="@style/step_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/start_game"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/qr_dialog_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>