<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/small1_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="1px"
            android:layout_marginBottom="1dp"
            android:background="@color/black"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/small3_img"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/small2_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:background="@color/black"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/small1_img"
            app:layout_constraintStart_toStartOf="@id/small1_img"
            app:layout_constraintTop_toBottomOf="@id/small1_img" />

        <ImageView
            android:id="@+id/small3_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/black"
            android:layout_marginStart="1px"
            android:layout_marginEnd="1px"
            app:layout_constraintBottom_toBottomOf="@id/small1_img"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/small5_img"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/small1_img"
            app:layout_constraintTop_toTopOf="@id/small1_img" />

        <ImageView
            android:id="@+id/small4_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/small2_img"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="@id/small3_img"
            app:layout_constraintStart_toStartOf="@id/small3_img"
            app:layout_constraintTop_toTopOf="@id/small2_img" />

        <ImageView
            android:id="@+id/small5_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="1px"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/small3_img"
            app:layout_constraintDimensionRatio="h,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/small3_img"
            app:layout_constraintTop_toTopOf="@id/small3_img"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/small6_img"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/small4_img"
            app:layout_constraintEnd_toEndOf="@id/small5_img"
            app:layout_constraintStart_toStartOf="@id/small5_img"
            app:layout_constraintTop_toTopOf="@id/small4_img" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>