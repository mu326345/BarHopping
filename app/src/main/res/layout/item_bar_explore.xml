<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="bar"
            type="com.yuyu.barhopping.data.NewBarPost" />

        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card_constrain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/user_img_card"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="90dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/location_tv">

                <ImageView
                    android:id="@+id/user_img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    app:imageUrl="@{bar.userImg}" />
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/user_name_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@{bar.userName}"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                app:layout_constraintBottom_toBottomOf="@+id/user_img_card"
                app:layout_constraintEnd_toStartOf="@+id/like_btn"
                app:layout_constraintStart_toEndOf="@id/user_img_card"
                app:layout_constraintTop_toTopOf="@id/user_img_card"
                tools:text="name" />

            <ImageView
                android:id="@+id/content_img"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:imageUrl="@{bar.uri}"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/like_btn"
                android:layout_width="29dp"
                android:layout_height="0dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:src="@drawable/ic_baseline_favorite_border_24"
                app:layout_constraintBottom_toBottomOf="@+id/user_img_card"
                app:layout_constraintDimensionRatio="h,1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/user_img_card"
                app:useMaterialThemeColors="false" />

            <!--            <ImageButton-->
            <!--                android:id="@+id/comment_btn"-->
            <!--                android:layout_width="24dp"-->
            <!--                android:layout_height="24dp"-->
            <!--                android:layout_marginStart="16dp"-->
            <!--                android:background="#00000000"-->
            <!--                android:src="@drawable/ic_baseline_chat_bubble_24"-->
            <!--                app:layout_constraintStart_toEndOf="@id/like_btn"-->
            <!--                app:layout_constraintTop_toTopOf="@id/like_btn" />-->

            <TextView
                android:id="@+id/location_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:maxLines="2"
                android:text="@{bar.barName}"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/content_img"
                tools:text="this is location" />

            <ImageView
                android:id="@+id/phone_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:paddingTop="8dp"
                android:visibility="@{bar.barPhone != null ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/user_img_card"
                app:srcCompat="@drawable/ic_baseline_call_24" />

            <TextView
                android:id="@+id/number_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{bar.barPhone}"
                android:visibility="@{bar.barPhone != null ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/phone_img"
                app:layout_constraintStart_toEndOf="@id/phone_img"
                app:layout_constraintTop_toTopOf="@id/phone_img"
                tools:text="66666666" />

            <ImageView
                android:id="@+id/address_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_baseline_location_on_24"
                android:visibility="@{bar.barAddress != null ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="@id/phone_img"
                app:layout_constraintTop_toBottomOf="@id/phone_img" />

            <TextView
                android:id="@+id/address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="@{bar.barAddress}"
                android:visibility="@{bar.barAddress != null ? View.VISIBLE : View.GONE}"
                app:layout_constraintBottom_toBottomOf="@id/address_img"
                app:layout_constraintStart_toEndOf="@id/address_img"
                app:layout_constraintTop_toTopOf="@id/address_img"
                tools:text="this is address" />

            <TextView
                android:id="@+id/content_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="@{bar.commend}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/address_img"
                tools:text="this is content" />

            <TextView
                android:id="@+id/time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@{bar.time}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/content_tv"
                app:layout_constraintTop_toBottomOf="@+id/content_tv"
                tools:text="2022/01/01" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>