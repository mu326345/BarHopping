<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".rank.route.RouteDetaiFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/location_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_baseline_my_location_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/location_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:text="起點"
            app:layout_constraintBottom_toTopOf="@id/destination_tv"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintStart_toEndOf="@+id/location_img"
            app:layout_constraintTop_toTopOf="@+id/location_img" />

        <ImageView
            android:id="@+id/more_vert_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:layout_constraintEnd_toEndOf="@id/location_img"
            app:layout_constraintStart_toStartOf="@id/location_img"
            app:layout_constraintTop_toBottomOf="@id/location_img" />

        <ImageView
            android:id="@+id/destination_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_location_on_24"
            app:layout_constraintEnd_toEndOf="@id/location_img"
            app:layout_constraintStart_toStartOf="@id/location_img"
            app:layout_constraintTop_toBottomOf="@+id/more_vert_img" />

        <TextView
            android:id="@+id/destination_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:text="終點"
            app:layout_constraintBottom_toBottomOf="@id/destination_img"
            app:layout_constraintEnd_toEndOf="@id/guideline"
            app:layout_constraintStart_toEndOf="@id/destination_img"
            app:layout_constraintTop_toBottomOf="@+id/location_tv" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/market_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/count"
            app:layout_constraintBottom_toTopOf="@id/route_length_tv"
            app:layout_constraintStart_toStartOf="@id/guideline"
            app:layout_constraintTop_toTopOf="@+id/location_tv"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintVertical_chainStyle="spread" />

        <TextView
            android:id="@+id/number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/market_number_tv"
            app:layout_constraintStart_toEndOf="@id/market_number_tv"
            app:layout_constraintTop_toTopOf="@id/market_number_tv"
            android:text="1" />

        <TextView
            android:id="@+id/route_length_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/length"
            app:layout_constraintBottom_toTopOf="@id/degree_tv"
            app:layout_constraintStart_toStartOf="@id/market_number_tv"
            app:layout_constraintTop_toBottomOf="@+id/market_number_tv" />

        <TextView
            android:id="@+id/length_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@id/route_length_tv"
            app:layout_constraintStart_toEndOf="@id/route_length_tv"
            app:layout_constraintTop_toTopOf="@id/route_length_tv"
            android:text="1" />

        <TextView
            android:id="@+id/degree_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/degree"
            app:layout_constraintTop_toBottomOf="@id/route_length_tv"
            app:layout_constraintBottom_toBottomOf="@+id/destination_tv"
            app:layout_constraintStart_toStartOf="@id/route_length_tv" />

        <TextView
            android:id="@+id/degree_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            app:layout_constraintStart_toEndOf="@id/degree_tv"
            app:layout_constraintTop_toTopOf="@id/degree_tv" />

        <ImageView
            android:id="@+id/route_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@color/e_huang"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/destination_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>